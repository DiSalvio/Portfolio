<div class='big_header_buffer'></div>
<p id="notice"><%= notice %></p>
<div id='post_form'></div>
<div id='posts'>
  <% unless @post.draft? %>
    <%= link_to '<i class="fa fa-arrow-left fa-lg"></i>'.html_safe, posts_path, id: 'back_to_posts_link', class: 'icon' %>
  <% else %>
    <%= link_to '<i class="fa fa-arrow-left fa-lg"></i>'.html_safe, drafts_posts_path, id: 'back_to_posts_link', class: 'icon' %>
  <% end %>

  <% if current_admin %>
    <%= link_to '<i class="fa fa-times fa-lg"></i>'.html_safe, @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, id: 'delete_post_icon', class: 'icon' %> 
    <%= link_to '<i class="fa fa-pencil-square-o fa-lg"></i>'.html_safe, edit_post_path(@post), remote: true, id: 'edit_post_icon', class: 'icon' %>
  <% end %>

  <div class="show_post">
    <h3><%= @post.title %></h3>      
    <div class="show_post_image">
      <%= image_tag @post.image_url(:large).to_s %>
    </div>
    <div class="show_post_content">
      <p>		        
        <%= @post.content.html_safe %>
      </p>
    </div>
    <% unless @post.draft? %>
      <div class="show_tags">
        <%= raw tag_links(@post.all_tags) %>
      </div>
    <% else %>
      <div class="show_draft_tags">
        <%= @post.all_tags %>
      </div>
    <% end %>
  </div>
</div>
