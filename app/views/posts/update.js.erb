$("ul.errors").html("")
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('#new_post').slideDown(350);
  $('#post_form').html("").insertAfter('#new_post');
  $('#posts').html('<%= j (render @posts) %>');
  $('#post_<%= @post.id %>').html('<%= j (render @post) %>').show();
<% end %>
