$("ul.errors").html("")
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('#post_form').html("").hide();
  $('#posts').show();
  $('.post').html('<%= j (render @post) %>').show();
<% end %>
