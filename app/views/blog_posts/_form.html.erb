<%= simple_form_for @blog_post, remote: true, :validate => { :presence => true, :uniqueness => false } do |f| %>
  <ul class="errors">
  <%= f.error_notification %>
  </ul>

  <div class="form-inputs">
    <%= f.input :title, id: 'blog_post_title', label: false, placeholder: 'Title', :validate => { :presence => true, :uniqueness => false } %>
    <%= f.input :content, as: :text, id: 'blog_post_content', label: false, placeholder: 'Content', :validate => { :presence => true, :uniqueness => false } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Cancel", blog_posts_cancel_path, remote: true %>
  </div>
<% end %>
