<p id="notice"><%= notice %></p>
<div id='show_blog_post_container'>
  <div id='show_blog_post_title'>
    <%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, blog_posts_path, id: 'back_to_blog_link' %>
    <h3><%= @blog_post.title %></h3>
  </div>
<p id="post_content"><%= @blog_post.content %></p>

<% if current_admin %>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post) %>
<% end %>
</div>
